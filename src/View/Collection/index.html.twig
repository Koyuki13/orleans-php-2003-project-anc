{% extends 'layout.html.twig' %}
{% block title %}
    Collection
{% endblock %}

{% block content %}
    <section class="collection">
        <div class="row container-fluid mx-auto">
        {% for coin in coins %}
            <div class="col-lg-6 col-xl-4 my-5">
                <div class="card">
                    <div class="card-title d-flex justify-content-around">
                        <p class="card-title">{{ coin.name }}</p>
                        <p class="card-title">{{ coin.year }}</p>
                    </div>
                    <div class="card-body d-sm-flex align-items-center text-center">
                        <img src="/assets/images/{{ coin.image_recto }}" class="card-img mx-auto" alt="{{ coin.name }}">
                        <p class="card-text ml-3 text-left">{{ coin.material }} {{ coin.country }}</p>
                    </div>
                    {% if coin.stock !=NULL %}
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-success w-25" type="button">En stock</button>
                    </div>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
        </div>
    </section>
{% endblock %}