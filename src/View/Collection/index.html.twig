{% extends 'layout.html.twig' %}
{% block title %}
    Collection
{% endblock %}

{% block content %}
    <section class="collection">
        <div class="row container-fluid mx-auto">
        {% for coin in coins %}
            <div class="col-lg-6 col-xl-4 my-5">
                <div class="card shadow-sm">
                    <div class="card-title d-flex justify-content-between p-3 mb-0">
                        <p class="mx-2 text-center">{{ coin.name }}</p>
                        <p class="mx-2">{{ coin.year }}</p>
                    </div>
                    <div class="card-body d-sm-flex align-items-center text-center">
                        <img src="/assets/images/{{ coin.image_recto }}" class="card-img mx-auto" alt="{{ coin.name }}">
                        {% if coin.image_verso != NULL %}
                        <img src="/assets/images/{{ coin.image_verso }}" class="card-img mx-auto mt-sm-0 mt-4" alt="{{ coin.name }}">
                        {% endif %}
                    </div>
                    <div class="card-title d-flex justify-content-between p-3">
                        <p class="card-text mx-2">{{ coin.material }}</p>
                        <p class="card-text mx-2">{{ coin.country }}</p>
                    </div>
                    {% if coin.stock == 1 %}
                    <div class="coin-stock d-flex justify-content-end">
                        <button class="btn btn-primary w-100" type="button">Commander</button>
                    </div>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
        </div>
    </section>
{% endblock %}