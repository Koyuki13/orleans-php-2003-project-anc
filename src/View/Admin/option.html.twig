{% extends "layout.html.twig" %}

{% block content %}


    <section class="section option container">
        <h2 class="title-section my-5 text-center">Gérer mes options</h2>

        <fieldset class="p-md-5 my-5">
            <legend><h3>Origines des pièces</h3></legend>
            <div class="row">
                <div class="col-12 col-md-6">
                    <form action="#" method="post" class="form-row col">
                        <div class="origin-wrapper col-12">
                            {% for i in 0..origins | length - 1 %}
                                <div class="form-group origin w-100">
                                    <input type="text" class="form-control" value="{{ origins[i].country }}">
                                </div>
                            {% endfor %}
                        </div>
                        <div class="form-group col">
                            <div class="btn btn-primary">Enregistrer</div>
                        </div>
                    </form>
                </div>
                <div class="col m-2">
                    <form action="#" method="post" class="col p-4 form-adding">
                        <div class="form-group col">
                            <label for="country">Entrez une nouvelle origine</label>
                            <input class="form-control" type="text" name="country" id="country">
                        </div>
                        <div class="form-group text-right btn-add">
                            <div class="btn btn-primary">Ajouter</div>
                        </div>
                    </form>
                </div>
            </div>

        </fieldset>

        <fieldset class="p-5 my-5">
            <legend><h3>Sujets des emails</h3></legend>

        </fieldset>

        <fieldset class="p-5 my-5">
            <legend><h3>Matériaux</h3></legend>

        </fieldset>
    </section>

{% endblock %}
