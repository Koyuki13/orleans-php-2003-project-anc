{% extends 'layout.html.twig' %}

{% block content %}



    <section class="contact container">
        <h2>Contact</h2>
        {% if error is defined and error is not null %}
            <ul>
                {% for i in 0..error|length -1 %}
                    <li class="alert alert-danger">{{ error[i] }}</li>
                {% endfor %}
            </ul>
        {% endif %}
        {% if success is defined and success is not null %}
            <div class="alert alert-success">
                {{ success }}
            </div>
        {% endif %}
        <form action="/contact/send" method="post">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="firstname">Prénom:</label>
                    <input type="text" class="form-control" name="firstname" id="firstname" placeholder="Votre prénom">
                </div>
                <div class="form-group col-md-6">
                    <label for="lastname">Nom:</label>
                    <input type="text" class="form-control" name="lastname" id="lastname" placeholder="Votre nom">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" name="email" id="email" placeholder="Votre email">
                </div>
                <div class="form-group col-md-6">
                    <label for="phone">Téléphone:</label>
                    <input type="tel" class="form-control" name="phone" id="phone"
                           placeholder="Votre numéro de téléphone">
                </div>
            </div>

            <div class="form-group">
                <label for="topic">Sujet:</label>
                <select class="form-control" name="topic" id="topic" name="topic">
                    <option value="sujet1">Sujet 1</option>
                    <option value="sujet2">Sujet 2</option>
                    <option value="sujet3">Sujet 3</option>
                </select>
            </div>
            <div class="form-group">
                <label for="comment">Commentaire:</label>
                <textarea class="form-control" rows="5" name="comment" id="comment"></textarea>
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" name="policy" id="check">
                <label class="form-check-label" for="check">J'ai lu et accepte la Politique de confidentialité.</label>
            </div>
            <br>
            <div class="button">
                <button type="reset" class="btn">Annuler</button>
                <button type="submit" class="btn">Envoyer</button>
            </div>
        </form>
    </section>
{% endblock %}