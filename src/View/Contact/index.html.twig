{% extends 'layout.html.twig' %}
{% block title %}
    Nous Contacter
{% endblock %}

{% block content %}
    <link rel="stylesheet" href="/assets/css/contact.css">
    <section class="contact container">
        <h2 class="text-center">Nous Contacter</h2>
        {% if error is defined and error is not empty %}
            <ul>
                {% for i in 0..error|length -1 %}
                    <li class="alert alert-danger mx-md-5">{{ error[i] }}</li>
                {% endfor %}
            </ul>
        {% endif %}
        {% if _get.success is defined %}
            <div class="alert alert-success mx-5">
                {{ _get.success }}
            </div>
        {% endif %}
        <form action="#" method="post" class="mx-md-5 mt-5 mb-3">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="firstname">Prénom:</label>
                    <input type="text" class="form-control" name="firstname" id="firstname" placeholder="Matt"
                           value="{{ _post.firstname }}">
                </div>
                <div class="form-group col-md-6">
                    <label for="lastname">Nom:</label>
                    <input type="text" class="form-control" name="lastname" id="lastname" placeholder="Numis"
                           value="{{ _post.lastname }}">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" name="email" id="email" placeholder="numis.matt@lapiece.coin"
                           value="{{ _post.email }}">
                </div>
                <div class="form-group col-md-6">
                    <label for="phone">Téléphone:</label>
                    <input type="tel" class="form-control" name="phone" id="phone"
                           placeholder="0201502010" value="{{ _post.phone }}">
                </div>
            </div>
            <div class="form-group">
                <label for="topic">Sujet:</label>
                <select class="form-control" name="topic" id="topic" name="topic">
                    <option value="">< sélectionnez un sujet ></option>
                    {% for i in 0..subjects | length - 1 %}
                        <option {% if _post.topic == subjects[i].id %}selected{% endif %}
                                value="{{ subjects[i].id }}">{{ subjects[i].subject }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label for="comment">Commentaire:</label>
                <textarea class="form-control" rows="5" name="comment" id="comment">{{ _post.comment }}</textarea>
            </div>
            <div class="form-check mt-5">
                <input type="checkbox" class="form-check-input" name="policy" id="check"
                       {% if _post.policy == true %}checked{% endif %}>
                <label class="form-check-label" for="check">J'ai lu et accepte la politique de confidentialité.</label>
            </div>
            <br>
            <div class="button mt-4 d-flex flex-column flex-sm-row">
                <button type="submit" class="btn">Envoyer</button>
                <button type="reset" class="btn">Annuler</button>
            </div>
        </form>
    </section>
{% endblock %}